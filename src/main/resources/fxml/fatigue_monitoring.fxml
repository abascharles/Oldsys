<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aircraft.controller.FatigueMonitoringController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Launcher Fatigue Monitoring" textFill="#1a365d">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Launcher Serial Number:" />
                        <TextField fx:id="launcherSerialField" prefWidth="200.0" promptText="Enter serial number" />
                        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#onSearchButtonClick" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Search" />
                        <Button fx:id="clearButton" mnemonicParsing="false" onAction="#onClearButtonClick" text="Clear" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="FATIGUE MONITORING REPORT" textFill="#1a365d">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <GridPane hgap="15.0" vgap="15.0">
                    <columnConstraints>
                        <javafx.scene.layout.ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="120.0" prefWidth="150.0" />
                        <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Pylon ID:" />
                        <Label text="Aircraft Type:" GridPane.rowIndex="1" />
                        <Label text="Flight Hours:" GridPane.rowIndex="2" />
                        <Label text="Fatigue Index:" GridPane.rowIndex="3" />
                        <TextField fx:id="pylonIdField" GridPane.columnIndex="1" />
                        <TextField fx:id="aircraftTypeField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="flightHoursField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <TextField fx:id="fatigueIndexField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    </children>
                </GridPane>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="generateButton" mnemonicParsing="false" onAction="#onGenerateButtonClick" style="-fx-background-color: #1a365d; -fx-text-fill: white;" text="GENERATE" />
                        <Button fx:id="printReportButton" mnemonicParsing="false" onAction="#onPrintReportButtonClick" text="Print Report" />
                    </children>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>